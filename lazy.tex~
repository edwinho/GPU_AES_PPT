\begin{frame}{\LaTeX 的强大之处}
	\begin{itemize}
		\item 传统：WYSIWYG(\alert{W}hat \alert{Y}ou \alert{S}ee \alert{I}s \alert{W}hat \alert{Y}ou \alert{G}et）
	    \item \LaTeX: WYTIWYG(\alert{W}hat \alert{Y}ou \alert{T}hink \alert{I}s \alert{W}hat \alert{Y}ou \alert{G}et)
	\end{itemize}
	\begin{center}	
		\includegraphics[width=9cm]{thispage.png}
	\end{center}
\end{frame}

\begin{frame}{\LaTeX 的强大之处}
	\begin{itemize}
	    \item 轻松处理各种复杂的排版，例如:
	 		\begin{itemize}
	    	\item 公式、各种罕见的符号
			\begin{center}
				\includegraphics[width=6cm]{complexformula.png}
			\end{center}
			\item 歌谱
				\begin{center}	
				\includegraphics[width=5cm]{music.png}
				\end{center}
			\item 幻灯片、网页
			\item CLI绘制图形
			\end{itemize}	
	\end{itemize}
\end{frame}

