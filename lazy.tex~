\begin{frame}{介绍两位好朋友}
	\begin{columns}[t]

    \column{.5\textwidth}
	\begin{block}{Vim}
			\begin{center}
				\includegraphics[width=4cm]{vim.png}
			\end{center}
	\end{block}

    \column{.5\textwidth}
	\begin{block}{Emacs(\alert{E}diting \alert{MAC}ro\alert{S})}
			\begin{center}
				\includegraphics[width=4cm]{emacs.png}
			\end{center}
	\end{block}
    \end{columns}
\end{frame}

\begin{frame}{IDE之神 --- Vim}
	\begin{itemize}
		\item Vim的特点
			\begin{itemize}
				\item 我\alert{不需要}用到鼠标（多个工作模式）
				\item 高\alert{可扩展}---.vimrc
				\item 体积\alert{小巧}、运行\alert{快速}
			\end{itemize}
		\item 学习曲线：\alert{陡峭}
		\item 我用它来：编辑普通文本、编辑简单的程序、编写\LaTeX、查词典
	\end{itemize}
			\begin{center}
				\includegraphics[width=6cm]{vimdict.png}
			\end{center}
\end{frame}

\begin{frame}{神的IDE --- Emacs}
	\begin{itemize}
		\item Emacs的特点
			\begin{itemize}
				\item 我\alert{不需要}用到鼠标（包罗万象的快捷键）
				\item 高\alert{可扩展}---Lisp语言
				\item 几乎可以当成一个\alert{操作系统}
			\end{itemize}
		\item 学习曲线：\alert{平稳上升}
		\item 我用它来：编辑普通文本、维护大型的工程、文件管理、%
		听音乐、查词典、玩游戏、上QQ、发Evernote
		\item 它还可以：收发邮件、浏览网页、新闻组、记录日程、%
		约会提醒、煮咖啡、\ldots
	\end{itemize}
\end{frame}

